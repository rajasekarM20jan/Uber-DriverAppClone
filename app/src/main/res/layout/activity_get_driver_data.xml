<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".GetDriverData">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview234"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button234"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:text="Add Your Driving License Photograph"
            android:drawableEnd="@drawable/get_through"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview235"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:layout_margin="30dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/cardview234">

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/carType"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_margin="3dp"
            android:visibility="invisible"
            android:text="Choose Your Car Type"
            android:drawableEnd="@drawable/get_through"/>

    </androidx.cardview.widget.CardView>



    <android.widget.Button
        android:id="@+id/submitLicense"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/next_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        android:text="Submit"
        android:layout_margin="30dp"/>


    <LinearLayout
        android:id="@+id/linear123"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <RadioGroup
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioCarType">
            <RadioButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="HatchBack"
                android:id="@+id/intercity"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SEDAN or SUV"
                android:id="@+id/xlIntercity"
                android:textColor="@color/white"/>

        </RadioGroup>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>